<main class="comment-discussion">
  <h2 class="heading heading__2">Discussion</h2>
  {{> comment_form }}
  <hr class="comment-discussion-divider" />
  <div class="comment-block js-comment-block">
    {{#each comments}}
      {{> comment isTopLevel=true }}
      <div class="reply-form-container js-comment-reply-form"></div>
      <div class="comment-replies-block js-comment-replies" data-replies-length="{{ replies.length }}">
        {{#each replies}}
          {{> comment isTopLevel=false }}
          <div class="reply-form-container js-comment-reply-form"></div>
        {{/each}}
      </div>
    {{/each}}
  </div>
</main>
